{
  "name": "microservice-sample",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --watch src --exec node src/index.js",
    "seed": "node scripts/seed-local.js",
    "start:local": "npm run seed && npm start",
    "migrate": "node scripts/migrate.js",
    "migrate:qris": "node scripts/migrate-qris.js",
    "deploy:fly": "flyctl deploy --config fly.toml",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "jest --runInBand --coverage --roots src tests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^5.2.1",
    "dotenv": "^17.2.3",
    "morgan": "^1.10.1",
    "winston": "^3.19.0",
    "prom-client": "^15.1.3",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.3",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "uuid": "^13.0.0",
    "better-sqlite3": "^12.5.0",
    "express-validator": "^7.3.1",
    "express-rate-limit": "^8.2.1",
    "lowdb": "^7.0.1",
    "stripe": "^20.0.0",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}